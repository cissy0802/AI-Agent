{
  "manifest_version": 3,
  "name": "Web Page Translator",
  "version": "1.0.0",
  "description": "Translate web pages paragraph by paragraph, showing original and translated text together while preserving images and other content",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
